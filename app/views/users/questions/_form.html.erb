<%= form_for [current_user, @question], html: { class: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 10, cols: 20, required: true ,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <%= f.select :tags, options_from_collection_for_select(Tag.all, :id, :name), {}, class: 'form-control select-tags' %>
  </div>
  <div class="form-group">
    <ul class="list-inline tag-lists"></ul>
  </div>
  <div class="form-group">
    <%= f.submit "Post Your Question", class: "btn btn-success" %>
  </div>
<% end %>

<%= render 'tag_template' %>
<%= unobtrusive_js("SO.tagging()") %>
